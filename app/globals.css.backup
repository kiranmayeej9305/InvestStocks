@tailwind base;
@tailwind components;
@tailwind utilities;

/* Mobile responsive fixes */
@layer base {
  html {
    -webkit-text-size-adjust: 100%;
    -webkit-tap-highlight-color: transparent;
  }
  
  body {
    @apply antialiased;
    overflow-x: hidden;
  }
}

@layer base {
  :root {
    /* Light Mode - Professional Blue Theme */
    
    /* Backgrounds */
    --background: 0 0% 100%; /* #FFFFFF - clean white */
    --foreground: 215 25% 14%; /* #1F2937 - very dark grey for text */

    /* Card & Panel Surfaces */
    --card: 210 20% 98%; /* #F9FAFB - very light grey for cards */
    --card-foreground: 215 25% 14%; /* #1F2937 - dark text on cards */
 
    /* Popovers & Dropdowns */
    --popover: 0 0% 100%; /* #FFFFFF - white background */
    --popover-foreground: 215 25% 14%; /* #1F2937 - dark text */
 
    /* Primary Colors - Deep Navy Blue */
    --primary: 225 55% 44%; /* #2B46B9 - deep bluish-navy */
    --primary-foreground: 0 0% 100%; /* White text on primary */
 
    /* Secondary Colors - Sky Blue */  
    --secondary: 207 77% 58%; /* #39A0ED - brighter sky-blue */
    --secondary-foreground: 0 0% 100%; /* White text on secondary */
 
    /* Muted/Subtle Elements */
    --muted: 210 20% 98%; /* #F9FAFB - light grey background */
    --muted-foreground: 215 16% 47%; /* #6B7280 - medium grey text */
 
    /* Accent Colors */
    --accent: 142 69% 58%; /* #28A745 - success green */
    --accent-foreground: 0 0% 100%; /* White text on accent */
 
    /* Destructive/Error Colors */
    --destructive: 0 84% 60%; /* Red for errors */
    --destructive-foreground: 0 0% 100%; /* White text on errors */

    /* Borders & Inputs */
    --border: 215 20% 91%; /* Light grey borders */
    --input: 215 20% 91%; /* Light grey input backgrounds */
    --ring: 225 55% 44%; /* Primary blue for focus rings */
 
    /* Border Radius */
    --radius: 0.75rem;
    
    /* Custom Financial Colors */
    --success: 142 69% 58%; /* #28A745 - gains/positive */
    --success-foreground: 0 0% 100%;
    
    --warning: 38 92% 62%; /* #FFB43A - alerts/caution */
    --warning-foreground: 215 25% 14%; /* Dark text on warning */
    
    --info: 207 77% 58%; /* #39A0ED - info/links */
    --info-foreground: 0 0% 100%;

    /* Text Colors */
    --text-primary: 215 25% 14%; /* #1F2937 - main text */
    --text-secondary: 215 16% 47%; /* #6B7280 - secondary text */
  }
 
  .dark {
    /* Dark Mode - Professional Dark Theme */
    
    /* Backgrounds */
    --background: 217 33% 7%; /* #0F1115 - deep almost-black */
    --foreground: 210 20% 91%; /* #E5E7EB - light grey text */
 
    /* Card & Panel Surfaces */
    --card: 215 25% 16%; /* #1A1F29 - dark greyish surface */
    --card-foreground: 210 20% 91%; /* #E5E7EB - light text on cards */
 
    /* Popovers & Dropdowns */
    --popover: 215 25% 16%; /* #1A1F29 - dark surface */
    --popover-foreground: 210 20% 91%; /* Light text */
 
    /* Primary Colors - Vivid Blue on Dark */
    --primary: 228 100% 62%; /* #3C63FF - vivid blue that pops */
    --primary-foreground: 210 20% 91%; /* Light text on primary */
 
    /* Secondary Colors - Cyan Blue */
    --secondary: 200 100% 66%; /* #5BB3FF - lighter blue/cyan */
    --secondary-foreground: 217 33% 7%; /* Dark text on secondary */
 
    /* Muted/Subtle Elements */
    --muted: 215 25% 16%; /* #1A1F29 - dark surface */
    --muted-foreground: 220 13% 69%; /* #9CA3AF - soft grey text */
 
    /* Accent Colors */
    --accent: 145 80% 66%; /* #34D58E - lighter green for dark mode */
    --accent-foreground: 217 33% 7%; /* Dark text on accent */
 
    /* Destructive/Error Colors */
    --destructive: 0 63% 50%; /* Dark mode red */
    --destructive-foreground: 210 20% 91%; /* Light text on errors */
 
    /* Borders & Inputs */
    --border: 215 25% 16%; /* Dark borders */
    --input: 215 25% 16%; /* Dark input backgrounds */
    --ring: 228 100% 62%; /* Vivid blue for focus rings */
    
    /* Custom Financial Colors */
    --success: 145 80% 66%; /* #34D58E - gains/positive on dark */
    --success-foreground: 217 33% 7%; /* Dark text on success */
    
    --warning: 38 100% 67%; /* #FFB75A - warm orange for dark */
    --warning-foreground: 217 33% 7%; /* Dark text on warning */
    
    --info: 200 100% 66%; /* #5BB3FF - info/links on dark */
    --info-foreground: 217 33% 7%; /* Dark text on info */

    /* Text Colors */
    --text-primary: 210 20% 91%; /* #E5E7EB - light text */
    --text-secondary: 220 13% 69%; /* #9CA3AF - soft grey text */
  }
}

@layer base {
  * {
    @apply border-border;
  }
  
  body {
    @apply bg-background text-foreground;
    font-feature-settings: "rlig" 1, "calt" 1;
  }
  
  /* Ensure proper mobile viewport handling */
  html {
    scroll-behavior: smooth;
  }
  
  /* Prevent horizontal scroll */
  html, body {
    overflow-x: hidden;
    width: 100%;
    min-height: 100vh;
  }
  
  #__next, #root {
    min-height: 100vh;
  }
  
  /* Force proper background on containers */
  div[data-radix-popper-content-wrapper] {
    background: transparent;
  }

  /* Professional shadows */
  .professional-shadow {
    box-shadow: 0 1px 3px 0 rgba(43, 70, 185, 0.1), 0 1px 2px 0 rgba(43, 70, 185, 0.06);
  }

  .professional-shadow-lg {
    box-shadow: 0 10px 15px -3px rgba(43, 70, 185, 0.1), 0 4px 6px -2px rgba(43, 70, 185, 0.05);
  }

  /* Gradient backgrounds for hero sections */
  .gradient-primary {
    background: linear-gradient(135deg, hsl(var(--primary)) 0%, hsl(var(--secondary)) 100%);
  }

  .gradient-success {
    background: linear-gradient(135deg, hsl(var(--success)) 0%, #34D58E 100%);
  }

  .gradient-warning {
    background: linear-gradient(135deg, hsl(var(--warning)) 0%, #FFB75A 100%);
  }

  /* Professional glass effect */
  .glass-effect {
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Dark mode glass effect */
  .dark .glass-effect {
    background: rgba(26, 31, 41, 0.8);
    border: 1px solid rgba(57, 160, 237, 0.2);
  }

  /* Financial color utilities */
  .text-gain {
    color: hsl(var(--success));
  }

  .text-loss {
    color: hsl(var(--destructive));
  }

  .text-warning {
    color: hsl(var(--warning));
  }

  .bg-gain {
    background-color: hsl(var(--success));
    color: hsl(var(--success-foreground));
  }

  .bg-loss {
    background-color: hsl(var(--destructive));
    color: hsl(var(--destructive-foreground));
  }

  .bg-warning {
    background-color: hsl(var(--warning));
    color: hsl(var(--warning-foreground));
  }
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }
  
  /* Mobile-first responsive utilities */
  .mobile-container {
    @apply px-4 sm:px-6 lg:px-8;
  }
  
  .mobile-text {
    @apply text-sm sm:text-base lg:text-lg;
  }
  
  .mobile-heading {
    @apply text-2xl sm:text-3xl lg:text-4xl;
  }
  
  /* Improved touch targets for mobile */
  .touch-target {
    @apply min-h-[44px] min-w-[44px];
  }
  
  /* Professional glass morphism effect */
  .glass {
    backdrop-filter: blur(10px);
    background: rgba(249, 250, 251, 0.8);
    border: 1px solid rgba(43, 70, 185, 0.1);
  }
  
  .dark .glass {
    background: rgba(26, 31, 41, 0.8);
    border: 1px solid rgba(57, 160, 237, 0.2);
  }
  
  /* Responsive grid utilities */
  .responsive-grid {
    @apply grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6;
  }
  
  /* Mobile-optimized spacing */
  .mobile-spacing {
    @apply space-y-4 sm:space-y-6 lg:space-y-8;
  }
  
  /* Line clamp utilities */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Enhanced professional card shadows */
  .shadow-3xl {
    box-shadow: 0 25px 50px -12px rgba(43, 70, 185, 0.15), 0 12px 24px -8px rgba(43, 70, 185, 0.1);
  }
  
  .dark .shadow-3xl {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4), 0 12px 24px -8px rgba(0, 0, 0, 0.3);
  }
  
  /* Professional card hover effects */
  .card-hover {
    @apply transition-all duration-300 hover:shadow-lg hover:-translate-y-1;
  }
  
  /* Professional Glass Effects */
  .card-glass {
    backdrop-filter: blur(20px) saturate(180%);
    background: rgba(249, 250, 251, 0.7);
    border: 1px solid rgba(43, 70, 185, 0.1);
    box-shadow: 
      0 8px 32px 0 rgba(43, 70, 185, 0.15),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.5);
  }
  
  .dark .card-glass {
    background: rgba(26, 31, 41, 0.7);
    border: 1px solid rgba(57, 160, 237, 0.15);
    box-shadow: 
      0 8px 32px 0 rgba(0, 0, 0, 0.4),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.1);
  }
}

/* Professional scrollbar styles */
@layer base {
  /* Webkit browsers (Chrome, Safari, Edge) */
  ::-webkit-scrollbar {
    width: 10px;
    height: 10px;
  }

  ::-webkit-scrollbar-track {
    background: hsl(var(--muted));
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb {
    background: hsl(var(--primary) / 0.5);
    border-radius: 10px;
    border: 2px solid hsl(var(--muted));
    transition: all 0.3s ease;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: hsl(var(--primary) / 0.8);
  }

  /* Dark mode scrollbar */
  .dark ::-webkit-scrollbar-track {
    background: hsl(var(--muted));
  }

  .dark ::-webkit-scrollbar-thumb {
    background: hsl(var(--primary) / 0.6);
    border: 2px solid hsl(var(--muted));
  }

  .dark ::-webkit-scrollbar-thumb:hover {
    background: hsl(var(--primary) / 0.9);
  }

  /* Firefox */
  * {
    scrollbar-width: thin;
    scrollbar-color: hsl(var(--primary) / 0.5) hsl(var(--muted));
  }

  .dark * {
    scrollbar-color: hsl(var(--primary) / 0.6) hsl(var(--muted));
  }
}